{
  "info": {
    "_postman_id": "b4c4d1d5-9a6b-4b60-9c41-0df6f3ac0011",
    "name": "Skillup Burger Shop API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Skillup Burger Shop backend running on http://localhost:5000/api"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" },
    { "key": "admin_token", "value": "" },
    { "key": "productId", "value": "{{productId}}" },
    { "key": "orderId", "value": "{{orderId}}" },
    { "key": "cartItemId", "value": "{{cartItemId}}" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth", "register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Tester\",\n  \"email\": \"jane@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth", "login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"jane@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/auth/me", "host": ["{{base_url}}"], "path": ["auth", "me"] }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/auth/logout", "host": ["{{base_url}}"], "path": ["auth", "logout"] }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/products", "host": ["{{base_url}}"], "path": ["products"] }
          }
        },
        {
          "name": "Get Product",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/products/{{productId}}", "host": ["{{base_url}}"], "path": ["products", "{{productId}}"] }
          }
        },
        {
          "name": "Create Product (admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{admin_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/products", "host": ["{{base_url}}"], "path": ["products"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"BBQ Bacon Burger\",\n  \"description\": \"Smoky BBQ sauce, bacon, cheddar, crispy onions\",\n  \"price\": 279,\n  \"image\": \"https://res.cloudinary.com/demo/image/upload/burger4.png\",\n  \"category\": \"burger\",\n  \"available\": true\n}"
            }
          }
        },
        {
          "name": "Update Product (admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{admin_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/products/{{productId}}", "host": ["{{base_url}}"], "path": ["products", "{{productId}}"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 289,\n  \"available\": true\n}"
            }
          }
        },
        {
          "name": "Delete Product (admin)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{admin_token}}" }
            ],
            "url": { "raw": "{{base_url}}/products/{{productId}}", "host": ["{{base_url}}"], "path": ["products", "{{productId}}"] }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/cart", "host": ["{{base_url}}"], "path": ["cart"] }
          }
        },
        {
          "name": "Add Item",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/cart/items", "host": ["{{base_url}}"], "path": ["cart", "items"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}"
            }
          }
        },
        {
          "name": "Update Item Quantity",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/cart/items/{{cartItemId}}", "host": ["{{base_url}}"], "path": ["cart", "items", "{{cartItemId}}"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 3\n}"
            }
          }
        },
        {
          "name": "Remove Item",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/cart/items/{{cartItemId}}", "host": ["{{base_url}}"], "path": ["cart", "items", "{{cartItemId}}"] }
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/cart", "host": ["{{base_url}}"], "path": ["cart"] }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/orders", "host": ["{{base_url}}"], "path": ["orders"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    { \"product\": \"{{productId}}\", \"quantity\": 2 }\n  ],\n  \"shippingAddress\": {\n    \"house\": \"221B Baker Street\",\n    \"city\": \"London\",\n    \"state\": \"London\",\n    \"country\": \"UK\",\n    \"pinCode\": \"NW16XE\",\n    \"contact\": \"9999999999\"\n  },\n  \"paymentMethod\": \"COD\"\n}"
            }
          }
        },
        {
          "name": "List Orders (user/admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/orders", "host": ["{{base_url}}"], "path": ["orders"] }
          }
        },
        {
          "name": "Get Order By Id",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/orders/{{orderId}}", "host": ["{{base_url}}"], "path": ["orders", "{{orderId}}"] }
          }
        },
        {
          "name": "Update Order Status (admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{admin_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/orders/{{orderId}}/status", "host": ["{{base_url}}"], "path": ["orders", "{{orderId}}", "status"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderStatus\": \"Confirmed\"\n}"
            }
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/orders/{{orderId}}", "host": ["{{base_url}}"], "path": ["orders", "{{orderId}}"] }
          }
        }
      ]
    },
    {
      "name": "Contact",
      "item": [
        {
          "name": "Submit Contact",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/contact", "host": ["{{base_url}}"], "path": ["contact"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Customer One\",\n  \"email\": \"customer1@example.com\",\n  \"message\": \"What are today\\'s specials?\"\n}"
            }
          }
        },
        {
          "name": "Get Messages (admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{admin_token}}" }],
            "url": { "raw": "{{base_url}}/contact", "host": ["{{base_url}}"], "path": ["contact"] }
          }
        }
      ]
    }
  ]
}
